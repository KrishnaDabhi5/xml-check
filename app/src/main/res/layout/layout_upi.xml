<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="CANCEL"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFD1D1D1" />

    <LinearLayout
        android:id="@+id/pinSection"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_above="@id/keypad"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER 6-DIGIT UPI PIN"
            android:textStyle="bold"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">
            <TextView android:id="@+id/pin1" style="@style/PinDot" />
            <TextView android:id="@+id/pin2" style="@style/PinDot" />
            <TextView android:id="@+id/pin3" style="@style/PinDot" />
            <TextView android:id="@+id/pin4" style="@style/PinDot" />
            <TextView android:id="@+id/pin5" style="@style/PinDot" />
            <TextView android:id="@+id/pin6" style="@style/PinDot" />
        </LinearLayout>

        <TextView
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/warning_bg"
            android:padding="10dp"
            android:text="You are SENDING â‚¹1.00 from your account to DEMO MERCHANT"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:columnCount="3"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="false"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center">

        <Button android:id="@+id/key_1" style="@style/KeypadButton" android:text="1"
            android:layout_columnWeight="1" android:layout_rowWeight="1" />
        <Button android:id="@+id/key_2" style="@style/KeypadButton" android:text="2"
            android:layout_columnWeight="1" android:layout_rowWeight="1" />
        <Button android:id="@+id/key_3" style="@style/KeypadButton" android:text="3"
            android:layout_columnWeight="1" android:layout_rowWeight="1" />

        <Button android:id="@+id/key_4" style="@style/KeypadButton" android:text="4"
            android:layout_columnWeight="1" android:layout_rowWeight="1" />
        <Button android:id="@+id/key_5" style="@style/KeypadButton" android:text="5"
            android:layout_columnWeight="1" android:layout_rowWeight="1" />
        <Button android:id="@+id/key_6" style="@style/KeypadButton" android:text="6"
            android:layout_columnWeight="1" android:layout_rowWeight="1" />

        <Button android:id="@+id/key_7" style="@style/KeypadButton" android:text="7"
            android:layout_columnWeight="1" android:layout_rowWeight="1" />
        <Button android:id="@+id/key_8" style="@style/KeypadButton" android:text="8"
            android:layout_columnWeight="1" android:layout_rowWeight="1" />
        <Button android:id="@+id/key_9" style="@style/KeypadButton" android:text="9"
            android:layout_columnWeight="1" android:layout_rowWeight="1" />

        <ImageButton
            android:id="@+id/key_backspace"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/keypad_cell_bg"
            android:src="@drawable/ic_backspace_24"
            android:contentDescription="@string/backspace"
            android:scaleType="center"
            android:tint="@android:color/black" />

        <Button android:id="@+id/key_0" style="@style/KeypadButton" android:text="0"
            android:layout_columnWeight="1" android:layout_rowWeight="1" />

        <Button android:id="@+id/key_submit" style="@style/KeypadSubmit" android:text="@string/submit"
            android:layout_columnWeight="1" android:layout_rowWeight="1" />
    </GridLayout>
</RelativeLayout>
